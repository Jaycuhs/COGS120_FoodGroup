   <div class="container-fluid" id="items">
      {{#each Sections}}
         <div id="{{sectionName}}">
            <h1 class="tabHeaders listHeader">{{sectionName}}</h1>
            {{#each categories}}
               <h2 class="category-list">{{categoryName}}</h2>
